@using AdminApp.Controllers
@model ViewModels.Common.ApiResponse<ViewModels.Catalog.Products.ProductDto>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Product Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        ID
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Id)
                    </dd>
                    <dt class="col-sm-2">
                        Đơn giá bán
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Price)
                    </dd>
                    <dt class="col-sm-2">
                        Đơn giá nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.OriginalPrice)
                    </dd>
                    <dt class="col-sm-2">
                        Số lượng còn trong kho
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Stock)
                    </dd>
                    <dt class="col-sm-2">
                        Số lượt xem sản phẩm
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.ViewCount)
                    </dd>
                    <dt class="col-sm-2">
                        Tạo ngày
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.DateCreated)
                    </dd>
                    <dt class="col-sm-2">
                        Tên sản phẩm
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Mô tả
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Chi tiết sản phẩm
                    </dt>
                    <dd class="col-sm-10">
                        @{
                            string details = Model.Data.Details;
                        }
                        @Html.Raw(details)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoDescription)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Title
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoTitle)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Alias
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoAlias)
                    </dd>
                    <dt class="col-sm-2">
                        Được hiển thị trên trang chủ
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.IsFeatured)
                    </dd>
                    <dt class="col-sm-2">
                        Ảnh sản phẩm
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@HomeController.GetBaseAddress()@Html.DisplayFor(model => model.Data.ThumbnailImage)"
                             height="200" alt="Thumbnail Image" />
                    </dd>
                </dl>
            </div>

        </div>
    </div>
    <div>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Data.Id }) |
        <a asp-action="Index">Quay lại danh sách</a>
    </div>
</div>