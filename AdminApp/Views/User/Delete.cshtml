@model ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Delete user</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <h3>Bạn có chắc chắn muốn xóa tài khoản này?</h3>
            <h5 style="color:red">Lưu ý: không thể xóa tài khoản admin</h5>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Quay lại danh sách</a>
    </div>
</div>