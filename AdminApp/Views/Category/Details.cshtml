@using ViewModels.Common;
@model ApiResponse<ViewModels.Catalog.Categories.CategoryDto>

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết loại sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Category Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        ID
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Id)
                    </dd>
                    <dt class="col-sm-2">
                        Tên loại sản phẩm
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Name)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Title
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoTitle)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Alias
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoAlias)
                    </dd>
                    <dt class="col-sm-2">
                        SEO Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SeoDescription)
                    </dd>
                    <dt class="col-sm-2">
                        Thứ tự
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.SortOrder)
                    </dd>
                    <dt class="col-sm-2">
                        Hiển thị trên trang chủ
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.IsShowOnHome)
                    </dd>
                    <dt class="col-sm-2">
                        Danh mục gốc
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.ParentId)
                    </dd>
                    <dt class="col-sm-2">
                        Trạng thái
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Status)
                    </dd>
                </dl>
            </div>
        </div>  
    </div>
    <div>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Data.Id }) |
        <a asp-action="Index">Quay lại danh sách</a>
    </div>
</div>